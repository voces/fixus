{
  "name": "fixus",
  "version": "1.0.0",
  "description": "",
  "author": "verit",
  "license": "MIT",
  "main": "src/index.ts",
  "scripts": {
    "build:changelog": "ts-node bin/changelog.ts",
    "build:defs": "node bin/operations gen-defs",
    "build:w3x": "npm run build && npm run pack",
    "build": "echo Transpiling TypeScript to Lua... && tstl -p tsconfig.map.json && node bin/operations build",
    "dev": "npm-watch",
    "jest:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "jest": "jest --silent",
    "pack": "ts-node bin/pack.ts",
    "pretest": "eslint . --ext .ts",
    "run": "node bin/operations run",
    "start": "npm run build && node bin/operations run",
    "test": "npm run jest"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.8.7",
    "@types/jest": "^25.1.4",
    "@types/marked": "^0.7.3",
    "@types/node": "^13.9.2",
    "@typescript-eslint/eslint-plugin": "^2.24.0",
    "@typescript-eslint/parser": "^2.24.0",
    "eslint": "^6.8.0",
    "eslint-config-mdcs": ">=4.2.3",
    "eslint-config-verit": ">=1.0.3",
    "fs-extra": "^9.0.0",
    "jest": "^25.1.0",
    "lua-types": ">=2.6.1",
    "luamin": ">=1.0.4",
    "marked": "^0.8.1",
    "npm-watch": "^0.6.0",
    "ts-jest": "^25.2.1",
    "ts-node": "^8.7.0",
    "ts-transformer-imports": "^0.4.3",
    "typescript-to-lua": "^0.32.0",
    "w3api": "^1.5.1",
    "war3-types": ">=1.0.1",
    "war3tstlhelper": ">=1.0.1"
  },
  "dependencies": {
    "@voces/w3ts": "^1.0.7"
  },
  "watch": {
    "build:defs": {
      "patterns": [
        "./maps/*"
      ],
      "extensions": "lua",
      "legacyWatch": true
    }
  }
}
